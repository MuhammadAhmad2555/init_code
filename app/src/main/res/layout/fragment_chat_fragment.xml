<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:background="@color/color_dark_blue"
        android:layout_height="80dp">

        <!--        TopView-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/TopView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/btn_image"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/baseline_arrow_back_24"
                    android:layout_height="44dp"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/male"
                    android:layout_marginEnd="10dp"
                    android:layout_height="44dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:text="AHMAD"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/btn_image"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="34dp"
                    android:background="@drawable/baseline_local_phone_24"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="34dp"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/baseline_more_vert_24"
                    android:layout_height="34dp"/>

            </LinearLayout>


        </RelativeLayout>
        <!-- ______-->





    </RelativeLayout>



    <!-- Chat RecyclerView -->

    <!-- Input Layout -->
    <RelativeLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">

        <!-- EditText for message input -->
        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:inputType="text"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/buttonSend"

            android:drawableEnd="@drawable/baseline_camera_alt_24"
            android:background="@drawable/sent_messge_input_design"
            android:drawableStart="@drawable/baseline_insert_emoticon_24"
            android:hint="Message"
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <!-- Send Button -->

        <RelativeLayout
            android:id="@+id/buttonSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/round_shape_"
            android:padding="1dp">

            <Button

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/baseline_mic_24"
                android:textColor="@android:color/black" />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>

